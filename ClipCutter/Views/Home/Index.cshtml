<h1>Working with Videos</h1>

<div>
    <form asp-controller="Home" asp-action="Index" enctype="multipart/form-data" method="post">

        <input type="file" name="file" onchange="openFile(event)" accept="video/*" />
        <input name="start" />
        <input name="end" />
        <button type="submit">Submit</button>
    </form>

    <video id="templateVideoPlayer"  width="300" controls="controls" muted></video>
</div>
<hr />

<div>
    <video width="300" height="200" controls muted
           src="~/converted.mp4" type="video/*"></video>
</div>

@section scripts {
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        var uploadComplete = false;

        var openFile = function (event) {
            var file = event.target.files[0];
            var videoPlayer = document.getElementById('templateVideoPlayer');

            var url = URL.createObjectURL(file);
            videoPlayer.setAttribute('src', url);

            
        }
    </script>
}